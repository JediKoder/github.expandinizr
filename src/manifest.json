{
  "name": "github.expandinizr",
  "version": "0.0.0",
  "manifest_version": 2,
  "description": "Chrome extension that improves the GitHub experience",
  "homepage_url": "http://github.com/thecodejunkie/github.expandinizr",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "https://github.com/*",
    "https://gist.github.com/*"
  ],
  "optional_permissions": [
    "http://*/",
    "https://*/"
  ],
  "options_ui": {
    "page": "content/options.html",
    "chrome_style": true,
    "open_in_tab": true
  },
  "background": {
    "scripts": [ "content/background.min.js" ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "css": [
        "content/github-inject.min.css"
      ],
      "js": [
        "content/index.js",
        "content/github-inject.min.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://gist.github.com/*"
      ],
      "css": [
        "content/gist-inject.min.css"
      ],
      "run_at": "document_end"
    }
  ]
}
